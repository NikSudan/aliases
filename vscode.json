// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "Fira Code, Menlo, monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "workbench.editor.showTabs": false,
  "window.restoreFullscreen": true,
  "terminal.external.osxExec": "Hyper.app",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "editor.minimap.enabled": true,
  "git.confirmSync": false,
  "files.associations": {
    ".env": "ini",
    ".env.example": "ini",
    ".buckconfig": "ini",
    ".flowconfig": "ini",
    ".gitignore": "ini",
    ".gitattributes": "ini",
    ".gitmodules": "ini",
    ".eslintignore": "ini",
    ".htaccess": "ini",
    "*.sln": "ini"
  },
  "csharp.suppressDotnetInstallWarning": true,
  "files.exclude": {
    "**/.github": true,
    "**/.travis.yml": true,
    "**/.gitattributes": true,
    "**/.gitkeep": true,
    "**/composer.*": true,
    "**/dist": true,
    "**/cache": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/vendor": true,
    "**/uploads": true,
    "**/languages": true,
    "**/upgrade": true,
    "**/LICENSE.md": true,
    "**/license.txt": true,
    "**/readme.html": true,
    "**/CHANGELOG.md": true,
    "**/.sass-cache": true,
    "**/storage": true,
    "**/artisan": true,
    "**/phpspec.yml": true,
    "**/phpunit.xml": true,
    "**/yarn.lock": true,
    "**/server.php": true,
    "**/wp-admin": true,
    "**/wp-includes": true,
    "**/wp-activate.php": true,
    "**/wp-blog-header.php": true,
    "**/wp-comments-post.php": true,
    "**/wp-cron.php": true,
    "**/wp-links-opml.php": true,
    "**/wp-load.php": true,
    "**/wp-login.php": true,
    "**/wp-mail.php": true,
    "**/wp-settings.php": true,
    "**/wp-signup.php": true,
    "**/wp-trackback.php": true,
    "**/xmlrpc.php": true,
    "**/.nyc_output": true,
    "**/coverage": true,
    "**/.idea": true,
    "bootstrap/": true,
    "ios/": true,
    "android/": true,
    ".collabignore": true,
    "Builds/": true
  },
  "material-icon-theme.folders.icons": "specific"
}
